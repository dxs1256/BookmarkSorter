{
  "manifest_version": 3,
  "name": "视觉书签排序器 Pro",
  "version": "2.1",
  "description": "按标题视觉长度自动排序书签（短在前，长在后）",
  "permissions": [
    "bookmarks",
    "contextMenus",
    "notifications"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "一键排序全部书签"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
